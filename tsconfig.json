{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": ["es2015", "dom", "es6"],
    "strict": false,
    "declaration": false,
    "outDir": "./dist/",
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "files": ["./vue-shims.d.ts", "./typings.d.ts"]
}
